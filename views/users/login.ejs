<% layout('./layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center my-auto">
  <div class="row">
    <div class="">
      <div class="card shadow">
        <img class="card-img-top" src="https://images.unsplash.com/photo-1533575770077-052fa2c609fc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8Y2FtcGdyb3VuZHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=600&q=60" alt="">
        <div class="card-body">
          <h5 class="card-title">Login</h5>
            <div >
              <form action="/login" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                  <label class="form-label" for="username">Username</label>
                  <input
                    class="form-control"
                    type="text"
                    id="username"
                    name="username"
                    autofocus
                    required
                  />
                  <div class="valid-feedback">
                      Looks good!
                  </div>
                </div>
                <div class="mb-3">
                  <label class="form-label" for="password">Password</label>
                  <input
                    class="form-control"
                    type="password"
                    id="password"
                    name="password"
                    required
                  />
                  <div class="valid-feedback">
                      Looks good!
                  </div>
                </div>
                <div class="d-grid">
                  <button class="btn btn-success">
                    Login
                  </button>
                </div>
              </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
